{
  "extends": ["config:base"],

  "regexManagers": [
    {
      "fileMatch": ["\\.jsonnet$"],
      "matchStrings": [
        "image\\s*=\\s*'(?<depName>[^:]+):(?<currentValue>[^']+)'"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "loose"
    }
  ],

  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "groupName": "all Docker images",
      "groupSlug": "docker-updates",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "pinDigests": true
    }
  ],

  "schedule": ["after 2am every weekday"],
  "prConcurrentLimit": 5,
  "timezone": "UTC"
}

